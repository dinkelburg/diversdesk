---
// Import the necessary dependencies.
import AuthBtn from "@components/ui/buttons/AuthBtn.astro";
import ContactIconBlock from "@components/ui/blocks/ContactIconBlock.astro";
import TextInput from "@components/ui/forms/input/TextInput.astro";
import EmailContactInput from "@components/ui/forms/input/EmailContactInput.astro";
import Checkbox from "@components/ui/forms/input/Checkbox.astro";
import PhoneInput from "@components/ui/forms/input/PhoneInput.astro";
import TextAreaInput from "@components/ui/forms/input/TextAreaInput.astro";
import Icon from "@components/ui/icons/Icon.astro";
import { Image } from "astro:assets";
import myImage from "/public/images/Divecenter_image.png";

// Define the variables that will be used in this component
const title: string = "Fill in the form below and start a 14 free trial";
const subTitle: string =
  "We need some info from you in order to setup your environment.";
const formTitle: string = "Please fill in the form below to start your 14 day trial";
const formSubTitle: string = "We'll get back to you in 1-2 business days.";
---

<!-- Contact Us -->
<section class="mx-auto max-w-[50rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
  <div class="mx-auto max-w-2xl lg:max-w-5xl">
    <div class="text-center">
      <h1
        class="text-balance text-2xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight"
      >
        {title}
      </h1>
      <p class="mt-1 text-pretty text-neutral-600 dark:text-neutral-400">
        {subTitle}
      </p>
    </div>

    <div class="mt-6 grid items-center gap-6 lg:grid-cols-1 lg:gap-16">
      <div class="flex flex-col rounded-xl p-4 sm:p-6 lg:p-4"> 
        <!-- Form for user input with various input fields.-->
        <!-- Each field utilizes a different input component for the specific type of input (text, email, phone, and textarea)-->
        <form action="https://test.traveltruster.com" method="post">
          <input name="redirect" value="http://localhost:4321/signup" type="hidden" />
          <div class="grid gap-4">
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <TextInput
                id="hs-fullname-contacts"
                label="Full Name"
                name="reference_prefix-ref-00053-00000-signup_submission.signup_submission.data.full_name"
              />
              <TextInput
              id="hs-firstname-contacts"
              label="Position/Job Title"
              name="reference_prefix-ref-00053-00000-signup_submission.signup_submission.data.job_title"
              />
            </div>
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <EmailContactInput
                id="hs-email-contacts"
                label="Email (Work)"
                name="reference_prefix-ref-00053-00000-signup_submission.signup_submission.data.email"
              />
              <PhoneInput
              id="hs-phone-contacts"
              label="Phone Number"
              name="reference_prefix-ref-00053-00000-signup_submission.signup_submission.data.phone"
            />
              <TextInput
                id="hs-companymame-contacts"
                label="Company Name"
                name="reference_prefix-ref-00053-00000-signup_submission.signup_submission.data.company"
              />
                <TextInput
                id="hs-website-contacts"
                label="Company Website"
                name="reference_prefix-ref-00053-00000-signup_submission.signup_submission.data.website"
            />
            </div>
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <TextInput
                id="hs-firstname-contacts"
                label="Country of Operation"
                name="reference_prefix-ref-00053-00000-signup_submission.signup_submission.data.country"
              />
              <TextInput
                id="hs-email-contacts"
                label="VAT Number"
                name="reference_prefix-ref-00053-00000-signup_submission.signup_submission.data.vat_number"
              />
            </div>
            <TextAreaInput
              id="hs-info-contacts"
              label="Additional Info or Questions"
              name="reference_prefix-ref-00053-00000-signup_submission.signup_submission.data.comment"
            />
            <Checkbox
              id="hs-checkbox-contacts"
              label="I agree with the" 
            />
            <link rel="stylesheet" href="http://diversdesk.com">
          </div>

          <div class="mt-4 grid">
            <AuthBtn title="Sign up for free" />
          </div>

          <div class="mt-3 text-center">
            <p class="text-sm text-neutral-600 dark:text-neutral-400">
              {formSubTitle}
            </p>
          </div>
         </form> 
       </div> 
       <div>

       </div>
</section>
