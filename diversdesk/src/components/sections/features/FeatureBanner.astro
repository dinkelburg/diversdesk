---

interface Props {
  title?: string;
  subTitle?: string;
  alt?: string;
}
// Define props from Astro
const { title, subTitle, alt } = Astro.props;
---

<section class="relative bg-[#E8F2F6] dark:bg-[rgb(51,51,51)] overflow-x-hidden">
  <div class="flex justify-center mx-auto max-w-[90rem] px-4 py-20 sm:px-12 lg:px-16 lg:pt-20">
      <div class="mb-4 max-w-full">
      <!-- Title -->
      {title && (
        <h2 class="text-pretty text-3xl font-bold text-neutral-800 dark:text-neutral-200 sm:text-4xl lg:text-5xl">
          {title}
        </h2>
      )}
      {subTitle && (
        <p class="mt-4 max-w-full tracking-wide text-pretty font-light text-neutral-800 dark:text-neutral-400 sm:text-2xl">
          {subTitle}
        </p>
      )}
      </div>  
  </div>
</section>
