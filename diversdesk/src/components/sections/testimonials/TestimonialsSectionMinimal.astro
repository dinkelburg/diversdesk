---
import TestimonialItem from "./TestimonialItem.astro";
import PrimaryCTA from "@components/ui/buttons/PrimaryCTA.astro";

const { title, testimonials, primaryBtn, primaryBtnURL} = Astro.props;

interface Props {
  title?: string;
  testimonials?: Testimonial[];
  primaryBtn?: string;
  primaryBtnURL?: string;
}

// TypeScript type for testimonials
type Testimonial = {
  content: string;
  author: string;
  role: string;
  avatarSrc: string;
  starCount: number;
};
---


<section class="mx-auto max-w-[85rem] px-2 py-10 sm:px-2 lg:px-8 lg:py-14 2xl:max-w-full">

  <!-- Title of the testimonials section -->
  <div class="mb-6 w-3/4 max-w-2xl sm:mb-10 md:mb-16 lg:w-1/2">
    <h2
      class="text-balance text-2xl font-bold text-neutral-800 dark:text-neutral-200 sm:text-3xl lg:text-4xl"
    >
      {title}
    </h2>
  </div>

  <!-- Container for the testimonials -->
  <div class="px-1 grid grid-cols-1 gap-x-8 gap-y-12 lg:grid-cols-3">
    {testimonials &&
      testimonials.map((testimonial) => (
        <div class="flex flex-col h-full">
          <TestimonialItem
            content={testimonial.content}
            author={testimonial.author}
            role={testimonial.role}
            avatarSrc={testimonial.avatarSrc}
            starCount={testimonial.starCount} 
          />
        </div>
      ))}
  </div>
  <!-- Action Button Section: This section includes two CTAs with their own styles and URL -->
  <div class="mt-12 grid w-full gap-3 sm:inline-flex">
    {primaryBtn && 
    <PrimaryCTA title={primaryBtn} url={primaryBtnURL} />
    }
  </div>
</section>