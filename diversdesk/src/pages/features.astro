---
// Import the necessary components  
import MainLayout from "@/layouts/MainLayout.astro";
import FeatureSchema from "@components/sections/seo-specific/FeatureSchema.astro"; 
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";
import CustomerOnboarding from "@images/onboarding_scrnshot1.png";
import CustomerUsingDD from "@images/save_time_1.png";
import iPhoneDivMedSignature from "@images/Waiver_incl_Signature.png";
import HeroImage from "@images/hero-image.png";
import TermsContent from "../terms/terms-conditions.mdx";
import MacBookAir from "@images/MacBookAir.png";
import MedicalFormPhone from "@images/medical_signature.png";
import RegisrationPagePhone from "@images/registration_page_med_required.png";
import CustomWaivers from "@images/custom_waivers_2.png";
import save_time from "@images/save_time_1.png";
import StaffCalIpad from "@images/staff_calendar_ipad.png";
import DataBase from "@images/database_image.png";
import DataBase2 from "@images/customer_database.png";
import DataBase3 from "@images/customer_database3.png";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  content: string; // HTML string
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = 
[
  {
    isRightSection: false,
    title: "Seamless Planning & Scheduling",
    content: "Diversdesk presents the industry's most flexible planner, offering multi-activity bookings, cross-location, and multi-trip scheduling capabilities. Last-minute booking changes and boat swaps are now done in just a few clicks. Real-time visual insights into trip capacity provide lightning-fast updates and prevent overbookings.",
    img: MacBookAir,
    imgAlt: "A macbook and phone running on the diversdesk dive center management software",
    btnExists: true,
    btnTitle: "Book a Demo",
    btnURL: "https://calendly.com/diversdesk-info/demo",
  },
  {
    isRightSection: true,
    title: "Paperless Onboarding",
    content: `
      <p>Experience seamless customer registration with Diversdesk's 100% paperless approach. Utilize our built-in custom registration forms, official waivers, and Diver Medical that guarantee a professional appearance, and a commitment to environmental sustainability.</p>
      <ul style="margin-top: 8px;"> 
        <li>✔ Registration, Waivers & Diver Medical</li>
        <li>✔ Multi-language</li>
        <li>✔ Faster, more professional, fewer errors</li>
        <li>✔ Secure storage</li>
        <li>✔ Pre-registered and returning customers can dive immediately</li>
      </ul>
    `,
    single: false,
    imgOne: MedicalFormPhone,
    imgOneAlt: "Blueprints and digital tablet with construction plans.",
    imgTwo: RegisrationPagePhone,
    imgTwoAlt: "Phones showing a digital registration form, dive center digital waivers and diver medical",
    btnExists: true,
    btnTitle: "Book a Demo",
    btnURL: "https://calendly.com/diversdesk-info/demo",
  },
  {
    isRightSection: false,
    title: "Custom Waiver Creation",
    content: "Create waivers that are personalized, professional, and tailored to your dive center's unique needs. Whether it's a rental agreement, terms and conditions, disclaimers, a stand-alone signed waiver, or embedded in your registration form through an acknowledgment checkbox, Diversdesk allows you to create documentation that resonates with your brand. Our user-friendly interface makes it easy to design and update waivers, ensuring they are always up-to-date and aligned with your operations.",
    img: CustomWaivers,
    imgAlt: "Phones showing multiple custom waivers created with diversdesk",
    btnExists: true,
    btnTitle: "Book a Demo",
    btnURL: "https://calendly.com/diversdesk-info/demo",
  },
  {
    isRightSection: true,
    title: "Staff Calendars & Workload",
    content: `
      <p>Each staff member has a personalized calendar, minimizing distractions by displaying only the data relevant to their role. With workload management screens, you can easily distribute the work fairly among staff members and calculate wages based on accurate data.</p>
      <ul style="margin-top: 8px;"> 
        <li>✔ Customizeable access rights</li>
        <li>✔ Schedule availability and off days</li>
        <li>✔ Clear insight into workload, workdays, activities and courses given.</li>
        <li>✔ Tracking of workdays and tanks used per staff member.</li>
      </ul>
    `,
    single: true,
    imgOne: StaffCalIpad,
    imgOneAlt: "An iPad showing a staff calendar within the diversdesk software environment",
    btnExists: true,
    btnTitle: "Book a Demo",
    btnURL: "https://calendly.com/diversdesk-info/demo",
  },
  {
    isRightSection: false,
    title: "Secure Customer Database",
    content:
      "At Diversdesk, we prioritize the security and privacy of your data. Our customer database is securely stored on a tier-one managed database, with automatic backups conducted regularly to prevent data loss and ensure reliable recovery capabilities. Each dive center’s exclusive data access is strictly controlled through authentication and secure, encrypted URLs.",
    img: DataBase3,
    imgAlt:
      "A tablet showing a customer database",
    btnExists: true,
    btnTitle: "Book a Demo",
    btnURL: "https://calendly.com/diversdesk-info/demo",
  },
];

const pageTitle: string = `Features | ${SITE.title}`;
---

<MainLayout title={pageTitle} robots="index, follow">
  
  <slot name="canonical">
    <link rel="canonical" href="https://www.diversdesk.com/features" />
  </slot>

  <slot name="head">  
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="robots" content="index, follow" />
    <meta property="og:title" content="Features | DiversDesk" />
    <meta property="og:description" content="Discover DiversDesk's powerful features for dive center management: streamlined planning, scheduling, CRM, and paperless onboarding." />
    <meta property="og:image" content="/images/features-image.avif" />
    <meta property="og:url" content="https://www.diversdesk.com/features" />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Features | DiversDesk" />
    <meta name="twitter:description" content="Explore DiversDesk's software features: planning, scheduling, CRM, and customer onboarding." />
    <meta name="twitter:image" content="/images/features-image.avif" />
  </slot>

  <FeatureSchema />

  <!-- MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Sticking to what we love doing"
    subTitle="At Diversdesk, we take pride in providing comprehensive solutions and exceptional service in the management solutions for Dive Centers and Tour operators. Our experienced team is dedicated to supporting your project from inception to completion with a range of specialized services."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL="https://calendly.com/diversdesk-info/demo"
  />
  
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        >
          <div set:html={article.content}></div> <!-- Render HTML content -->
        </RightSection>
      ) : (
        <LeftSection
          title={article.title}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        >
          <div set:html={article.content}></div> <!-- Render HTML content -->
        </LeftSection>
      );
    })
  }   
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <!-- <FeaturesStats
    title="By the Numbers"
    subTitle="Our commitment to quality and reliability is evident in every project we undertake. At Diversdesk, we are dedicated to delivering industry-leading services that ensure your construction projects are built to last."
    mainStatTitle="96%"
    mainStatSubTitle="of our clients rate their experience with Diversdesk as exceptional"
    stats={[
      {
        stat: "99.8%",
        description: "project completion rate",
      },
      {
        stat: "5,000+",
        description: "successful installations",
      },
      {
        stat: "85%",
        description: "client growth year-over-year",
      },
    ]}
  /> -->
</MainLayout> 
