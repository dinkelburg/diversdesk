---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import SoftwareApplicationSchema from "@components/sections/seo-specific/SoftwareApplicationSchema.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import LeftAndRightSectoins from "@components/sections/features/LeftAndRightSections.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import TestimonialsSectionMin from "@/components/sections/testimonials/TestimonialsSectionMinimal.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import {Icons} from "node_modules/@astrojs/starlight/components/Icons";
import {YouTube} from 'astro-embed';
import heroImage from "@images/hero-image-1920.avif"
import faqs from "@data/faqs.json"; 
import features from "@data/features.json"; 
import pricing from "@data/pricing.json";
import CustomerOnboarding from "@images/onboarding_scrnshot1.png";
import CutErrors from "@images/happy_customers2.png";
import BoostRevenue from "@images/happy_diver.jpeg";
import Icon from "@/components/ui/icons/Icon.astro";
import Container from "@components/container.astro";
import CompanyLogos from "@components/CompanyLogos.astro";
import LeftAndRightSections from "@components/sections/features/LeftAndRightSections.astro";
import FeatureBanner from "@components/sections/features/FeatureBanner.astro";
import FeaturesStatsAlt from "@components/sections/features/FeaturesStatsAlt.astro";
import WaiversImage from "@images/custom_waivers_2.avif";
import IpadDetaildDayView from "@images/iPad_pro_detailed_day.avif";

---

<MainLayout>
    <slot name="canonical">
      <link rel="canonical" href="https://www.diversdesk.com" />
    </slot>
    <slot name="head">
      <link rel="sitemap" href="/sitemap-index.xml" />
      <meta name="robots" content="index, follow" />

      <link
        rel="preload"
        as="image"
        href={heroImage.src}
      />

      <meta property="og:title" content="Dive Center Management Software | All-in-One Dive Shop Software | DiversDesk" />
      <meta property="og:description" content="Discover DiversDesk: the ultimate Dive Center Management Software. Simplify scheduling, streamline operations, and grow your dive shop effortlessly." />
      <meta property="og:image" content="/images/Laptop-and-phone-diversdesk.avif" />
      <meta property="og:url" content="https://www.diversdesk.com" />
      <meta property="og:type" content="website" />
      <meta name="twitter:card" content="summary_large_image" />
      <meta name="twitter:title" content="Effortless Dive Center Management | DiversDesk" />
      <meta name="twitter:description" content="Streamline your dive center operations with DiversDesk's all-in-one software. Features include planning, scheduling, onboarding, and more." />
      <meta name="twitter:image" content="/images/Laptop-and-phone-diversdesk.avif" />

      <script type="application/ld+json" is:inline>
        {
          "@context": "https://schema.org",
          "@type": "BreadcrumbList",
          "itemListElement": [
            {
              "@type": "ListItem",
              "position": 1,
              "name": "Home",
              "item": "https://www.diversdesk.com"
            }
          ]
        }
      </script>
    </slot>
    
    <SoftwareApplicationSchema/>

    <!-- <AnnouncementBanner
      btnId="dismiss-button"
      btnTitle="Schedule a demo here"
      url="https://github.com/mearashadowfax/Diversdesk"
    /> -->

    <HeroSection
            title=`Effortless Dive Center Management at Your Fingertips`
            subTitle="The all-in-one software designed to simplify operations, automate tasks, and grow your dive shop effortlessly."
            primaryBtn="Book a demo"
            primaryBtnURL="https://calendly.com/diversdesk-info/demo"
            primaryBtnAlt="Schedule a demo of DiversDesk software"
            secondaryBtn="Start a Free Trial"
            secondaryBtnURL="/signup/trial"
            secondaryBtnAlt="Sign up for a free trial of DiversDek's Dive Center Management Software" 
            src={heroImage}
            alt="DiversDesk Dive Center Management Software displayed on a laptop and phone with the planning and scheduling dashboard"
    >
      <noscript>
        <picture>
          <source srcset="/images/Laptop-and-phone-diversdesk.avif" type="image/avif" />
          <source srcset="/images/Laptop-and-phone-diversdesk.webp" type="image/webp" />
          <img src="/images/Laptop-and-phone-diversdesk.png" alt="Diversdesk Dive Center Management tool displayed on a laptop and a phone. The planning page is shown on the screens" />
        </picture>
      </noscript>
    </HeroSection>

    <CompanyLogos
    title="Leading the Way in Dive Shop Management"
    subTitle="Join top dive centers that trusted Diversdesk"
    alt="Logos of Top dive centers using Diversdesk's dive shop management software and solutions"    
    />

    <FeatureBanner 
    title="Management That Just Works"
    subTitle="Designed specifically for and in collaboration with dive centers, Diversdesk streamlines every aspect of your business, automates tasks, boosts efficiency, and helps you focus on delivering exceptional dive experiences."
    alt="Promoting Diversdesk's dive center management software with features like automation, efficiency, and streamlined operations"
    />

    <FeaturesStatsAlt
    title="Planning & Scheduling in just a few clicks"
    subTitle="Never lack insights with the industry's most flexible planner and scheduler. Say goodbye to error-prone spreadsheets and enjoy effortless scheduling and instant access across devices. Making daily planning fast and fun."
    benefits={[
      "One view capacity insights in trips, staff, fleet and more",
      "Seamless multi-trip and cross-location scheduling",
      "Effortless boat and group swaps",
    ]}
      image = {IpadDetaildDayView}
      imagePosition="left"
      showButton={true}
      buttonTitle="Find Out More"
      buttonURL="/features"
    />

    <FeaturesStatsAlt
    title="Flawless Paperless Customer Onboarding"
    subTitle="Experience seamless customer registration with Diversdesk's 100% paperless approach. Utilize our built-in custom registration forms, official waivers, and Diver Medical that guarantee a professional appearance, and a commitment to environmental sustainability."
    benefits={[
      "Registration, Waivers & Diver Medical.",
      "Customizable and Multi-Language",
      "Pre-Payments, Billing & Invoicing",
    ]}
    image = {WaiversImage}
    imagePosition="right"
    showButton={true}
    buttonTitle="Find Out More"
    buttonURL="/features"
    /> 

    <FeaturesStatsAlt
    title="Insights and Tools to Help Your Dive Center Thrive"
    subTitle="Useful metrics to monitor your revenue stream, top trips by numbers and revenue, and customer trends, with multiple export options for seamless analysis and reporting."
    benefits={[
      "Metrics & Insights",
      "Data Exports",
      "Automations",
    ]}
    imagePosition="left"
    showButton={true}
    buttonTitle="Find Out More"
    buttonURL="/features"
    />

