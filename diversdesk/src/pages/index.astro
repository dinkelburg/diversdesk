      <FAQ title="Frequently<br />Asked Questions" faqs={faqs} />
    </section>

    <HeroSectionAlt
            title="Let's Build Together"
            subTitle="Diversdesk is committed to continuously improving our services based on your insights and feedback."
    />




</MainLayout>
