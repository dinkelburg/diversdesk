          plans.map((plan) => (
            <div class="grid gap-0 dark:text-neutral-300">
              {plan.values.map((value) => (
                <div class="border-b border-neutral-300 odd:bg-neutral-100 text-sm py-3 px-5
                 dark:odd:bg-neutral-700 dark:border-neutral-600">
                  {typeof value === "boolean" ? (
                      <Icon name="checkCircle" />
                  ) : (
                    value
                  )}
                </div>
              ))}
            </div>
          ))
        }
      </div>
    </div>
  </div>
